    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        usuario = redes.login(jtfUsuario.getText(), jpfClave.getText());
        if(usuario == null ){
            JOptionPane.showMessageDialog(this, "Datos incorrectos");
            
        }else{
            dispose();
        }
        
    }                                        


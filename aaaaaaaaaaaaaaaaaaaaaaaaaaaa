
public class Principal extends javax.swing.JFrame {

    Redes redes;
    RedSocial user;
    
    public Principal() {
        initComponents();
        redes = new Redes();
        redes.agregar(new RedSocial(1, "juanito", "123456"));
        user = new Login(this, redes).getResponse();
        if(user != null){
            setVisible(true);
        } else {
            System.exit(0);
        }
    }

    

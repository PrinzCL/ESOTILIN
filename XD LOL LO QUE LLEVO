--Usuario 1--

P3_DBA_USER
Drk1.2022

CREATE USER "P3_DBA_USER" IDENTIFIED BY "Drk1.2022"  
DEFAULT TABLESPACE "USERS"
TEMPORARY TABLESPACE "TEMP";

ALTER USER "P3_DBA_USER" QUOTA UNLIMITED ON "USERS";

GRANT "CONNECT" TO "P3_DBA_USER" ;
GRANT "RESOURCE" TO "P3_DBA_USER" ;

GRANT CREATE INDEXTYPE TO "P3_DBA_USER" ;
GRANT CREATE VIEW TO "P3_DBA_USER" ;
GRANT CREATE TABLE TO "P3_DBA_USER" ;
GRANT CREATE SYNONYM TO P3_DBA_USER;
GRANT CREATE PUBLIC SYNONYM TO P3_DBA_USER;



--Usuario 2--

P3_DEV_USER
Drk2.2022

CREATE USER "P3_DEV_USER" IDENTIFIED BY "Drk2.2022"  
DEFAULT TABLESPACE "USERS"
TEMPORARY TABLESPACE "TEMP";

ALTER USER "P3_DEV_USER" QUOTA UNLIMITED ON "USERS";

GRANT "CONNECT" TO "P3_DEV_USER" ;

GRANT CREATE TRIGGER TO "P3_DEV_USER" ;
GRANT CREATE SESSION TO "P3_DEV_USER" ;
GRANT CREATE SEQUENCE TO "P3_DEV_USER" ;
GRANT CREATE PROCEDURE TO "P3_DEV_USER" ;
GRANT CREATE MATERIALIZED VIEW TO "P3_DEV_USER" ;


--USUARIO 3--

P3_AGENTE_VENTAS
Drk3.2022

-- USER SQL
CREATE USER "P3_AGENTE_VENTAS" IDENTIFIED BY "dRK3.2022"  
DEFAULT TABLESPACE "USERS"
TEMPORARY TABLESPACE "TEMP";

-- QUOTAS
ALTER USER "P3_AGENTE_VENTAS" QUOTA UNLIMITED ON "USERS";

-- ROLES
GRANT "CONNECT" TO "P3_AGENTE_VENTAS" ;

-- SYSTEM PRIVILEGES
GRANT CREATE SESSION TO "P3_AGENTE_VENTAS" ;




--CREACION DE SINONIMOS EN P3_DBA_USER--

CREATE PUBLIC SYNONYM SYN_CLIENTE FOR CLIENTE;
CREATE PUBLIC SYNONYM SYN_DETALLE_VENTA FOR DETALLE_VENTA;
CREATE PUBLIC SYNONYM SYN_PROPIEDAD FOR PROPIEDAD;
CREATE PUBLIC SYNONYM SYN_VENDEDOR FOR VENDEDOR;
CREATE PUBLIC SYNONYM SYN_VENTA FOR VENTA;

CREATE SYNONYM SYN_SUCURSAL FOR SUCURSAL;


--GRANT SELECT DE TABLAS A P3_AGENTE_VENTAS--

GRANT SELECT ON SYN_CLIENTE TO P3_AGENTE_VENTAS;
GRANT SELECT ON SYN_DETALLE_VENTA TO P3_AGENTE_VENTAS;
GRANT SELECT ON SYN_SUCURSAL TO P3_AGENTE_VENTAS;
GRANT SELECT ON SYN_PROPIEDAD TO P3_AGENTE_VENTAS;
GRANT SELECT ON SYN_VENDEDOR TO P3_AGENTE_VENTAS;
GRANT SELECT ON SYN_VENTA TO P3_AGENTE_VENTAS;

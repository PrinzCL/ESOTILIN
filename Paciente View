    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String res = controller.nuevoPaciente(
                jtfRut.getText(),
                jtfNombre.getText(),
                jtfEdad.getText(),
                jchbLicencia.isSelected());
        model.PacienteModel.listar(dtm);
        JOptionPane.showMessageDialog(this, res);

    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String res = controller.modificarPaciente(
                jtfRut.getText(),
                jtfNombre.getText(),
                jtfEdad.getText(),
                jchbLicencia.isSelected());
        model.PacienteModel.listar(dtm);
        JOptionPane.showMessageDialog(this, res);
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String res = controller.eliminarPaciente(
                jtfRut.getText());
        model.PacienteModel.listar(dtm);
        JOptionPane.showMessageDialog(this, res);
    }                                        

    private void jButton2MouseEntered(java.awt.event.MouseEvent evt) {                                      
        jlbAyuda.setText("Agrega un nuevo paciente a la base de datos");
        jButton2.setBackground(new Color(255,165,0));
    }                                     

    private void jButton2MouseExited(java.awt.event.MouseEvent evt) {                                     
        jlbAyuda.setText(":V");
        jButton2.setBackground(new Color(0,165,255));
    }                                    

    private void jButton3MouseEntered(java.awt.event.MouseEvent evt) {                                      
        jlbAyuda.setText("Modifica los datos de un paciente");
        jButton3.setBackground(new Color(255,165,0));
    }                                     

    private void jButton3MouseExited(java.awt.event.MouseEvent evt) {                                     
        jlbAyuda.setText(":V");
        jButton3.setBackground(new Color(0,165,255));
    }                                    

    private void jButton1MouseEntered(java.awt.event.MouseEvent evt) {                                      
        jlbAyuda.setText("Elimina a un paciente en especifico");
        jButton1.setBackground(new Color(255,165,0));
    }                                     

    private void jButton1MouseExited(java.awt.event.MouseEvent evt) {                                     
        jlbAyuda.setText(":V");
        jButton1.setBackground(new Color(0,165,255));
    }                                    


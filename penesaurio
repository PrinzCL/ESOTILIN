    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {         ----AGREGAR                                
        String codigo = jtfCodigo.getText();
        String descripcion = jtfDescripcion.getText();
        int precio = Integer.parseInt(jtfPrecio.getText());
        int stock = Integer.parseInt(jtfStock.getText());
        if(jrbMedicamento.isSelected()){
            String contraindicaciones = jtfContraindicaiones.getText();
            Medicamento m = new Medicamento(contraindicaciones, codigo, descripcion, precio, stock);
            JOptionPane.showMessageDialog(this, productos.agregar(m));
        }else{
            int cantidadVitaminas = Integer.parseInt(jtfCantidadVitaminas.getText());
            Suplemento s = new Suplemento(cantidadVitaminas, codigo, descripcion, precio, stock);
            JOptionPane.showMessageDialog(this, productos.agregar(s));
        }
        jtaDatos.setText(productos.listar());
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {       --LIMPIAR                                  
        jtfCantidadVitaminas.setText("");
        jtfCodigo.setText("");
        jtfContraindicaiones.setText("");
        jtfDescripcion.setText("");
        jtfPrecio.setText("");
        jtfStock.setText("");
        jrbMedicamento.doClick();
        jtfCodigo.requestFocus();
        
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {      ---ELIMINAR                                   
        String codigo = jtfCodigo.getText();
        JOptionPane.showMessageDialog(this,productos.eliminar(codigo));
        jtaDatos.setText(productos.listar());
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {       --BUSCAR                                  
        String codigo = jtfCodigo.getText();
        Producto prod = productos.buscar(codigo);
        if(prod != null){
            jtfCodigo.setText(prod.getCodigo());
            jtfDescripcion.setText(prod.getDescripcion());
            jtfPrecio.setText(""+prod.getPrecio());
            jtfStock.setText(""+prod.getStock());
            if(prod instanceof Medicamento){
                jtfContraindicaiones.setText(((Medicamento) prod).getContraindicaciones());
                jrbMedicamento.doClick();
            }
            if(prod instanceof Suplemento){
                jtfCantidadVitaminas.setText(""+((Suplemento) prod).getCantidadVitaminas());
                jrbSuplemento.doClick();
                
            }
                
        }else{
            JOptionPane.showMessageDialog(this, "Error, producto no encontrado!.");
        }
    }                                        

    private void jrbMedicamentoActionPerformed(java.awt.event.ActionEvent evt) {                                               
        habilitar(true);
    }                                              

    private void jrbSuplementoActionPerformed(java.awt.event.ActionEvent evt) {                                              
        habilitar(false);
    }                                             

    public void habilitar(boolean medicamento){
        jtfContraindicaiones.setEnabled(medicamento);
        jtfCantidadVitaminas.setEnabled(!medicamento);
    }
    
    
